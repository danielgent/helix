{
  "name": "@helpscout/helix",
  "private": false,
  "version": "0.0.1",
  "description": "A Faker-powered spec generator for Javascript",
  "main": "lib/index.js",
  "module": "es/index.js",
  "license": "MIT",
  "scripts": {
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=modules babel src --out-dir es",
    "build": "npm run clean && npm run pretty && npm run build:commonjs && npm run build:es",
    "clean": "rimraf coverage lib es dist",
    "coverage": "nyc report --temp-directory=coverage --reporter=text-lcov | coveralls",
    "dev": "npm run test:dev",
    "standard": "standard 'src/**/*.js'",
    "pretty": "npm run standard -- --fix",
    "start": "npm run dev",
    "test": "npm run test:coverage",
    "test:coverage": "npm run test:dev -- --coverage",
    "test:dev": "node scripts/test.js --env=jsdom"
  },
  "author": "ItsJonQ <itsjonq@gmail.com> (http://jonquach.com)",
  "dependencies": {
    "faker": "4.1.0",
    "prop-types": "15.6.0"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-core": "6.24.1",
    "babel-jest": "21.2.0",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-preset-env": "1.6.1",
    "babel-preset-es2015": "6.24.1",
    "coveralls": "3.0.0",
    "cross-env": "5.0.2",
    "jest": "21.2.1",
    "jest-cli": "21.2.1",
    "nyc": "11.2.1",
    "rimraf": "2.6.1"
  },
  "nyc": {
    "exclude": [
      "config/**/*.js",
      "es/**/*.js",
      "lib/**/*.js",
      "scripts/**/*.js"
    ],
    "cache": false
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx"
    ]
  },
  "standard": {
    "ignore": [
      "es",
      "dist",
      "lib"
    ],
    "globals": [
      "Event",
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "jasmine",
      "jest",
      "test"
    ]
  }
}
